def remote = [:]
  remote.name = 'lynette-remote'
  remote.host = '139.162.33.12'
  remote.user = 'lynette'
  remote.password = 'Akamai@123'
  remote.allowAnyHosts = true
pipeline {
    agent any
    parameters {
        choice(name: 'ROUTE', choices: ['/listcert', '/createcert', '/modifycert', '/deletecert'], description: 'Select the route to call')
        string(name: 'ENROLLMENT_ID', defaultValue: '', description: 'Enter the enrollment ID for /modifycert and /deletecert')
    }
    stages {
        stage('ssh to Remote Server') {
            steps {
                sshCommand remote: remote, command: "hostnamectl"
            }
            
        }
        
        stage('Run API Request') {
            steps {
                script {
                    def route = params.ROUTE
                    def enrollmentId = params.ENROLLMENT_ID
                    def url = "http://localhost:3000${route}"
                    if(enrollmentId) {
                        url += "?enrollmentId=${enrollmentId}"
                    }
                    echo "Triggering API request to ${url}..."
                    def command = "curl -X GET ${url}"
                    sshCommand remote: remote, command: command
                }
            }
        }
    }
}
